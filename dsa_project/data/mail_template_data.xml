<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- You have been assigned email -->
        <template id="dsa_project_message_user_assigned"
            inherit_id="project.project_message_user_assigned">
            <xpath expr="." position="inside">
                <t t-if="'x_studio_code' in object.fields_get() and object.x_studio_code">
                    <p>Code: <strong>
                            <t t-esc="object.x_studio_code" />
                        </strong>
                    </p>
                </t>
                <t t-if="'x_studio_priority' in object.fields_get() and object.x_studio_priority">
                    <p>Priority: <strong>
                            <t t-esc="object.x_studio_priority" />
                        </strong>
                    </p>
                </t>
                <t
                    t-if="'x_studio_planned_date' in object.fields_get() and object.x_studio_planned_date">
                    <p>Planned Date: <strong>
                            <t t-esc="object.x_studio_planned_date.strftime('%d/%m/%Y')" />
                        </strong>
                    </p>
                </t>
                <t t-if="object.date_deadline">
                    <p>Deadline: <strong>
                            <t t-esc="object.date_deadline.strftime('%d/%m/%Y')" />
                        </strong>
                    </p>
                </t>
                <br />
            </xpath>
        </template>
    </data>

</odoo>